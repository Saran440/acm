<odoo>
    <record id="account_invoice_edit_desc_form_view" model="ir.ui.view">
        <field name="name">account.invoice.edit.desc.form.view</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <button name="%(acm.action_edit_desc)d" string="Edit" type="action" icon="fa-external-link" context="{'edit_field': 'name'}"/>
            </xpath>
        </field>
    </record>

    <record id="account_move_edit_desc_form_view" model="ir.ui.view">
        <field name="name">account.move.edit.desc.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="after">
                <button name="%(acm.action_edit_desc)d" string="Edit" type="action" icon="fa-external-link" context="{'edit_field': 'name'}"/>
            </xpath>
        </field>
    </record>
</odoo>
