<odoo>

    <template id="report_receipt_tax_invoice_abb_acm_document_with_payments" inherit_id="acm.report_receipt_acm_document_with_payments" primary="True">
        <xpath expr="//div/h5/div/span[2]/span" position="replace">
            <span>ใบเสร็จรับเงิน/ใบกำกับภาษีอย่างย่อ</span>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[1]" position="after">
            <th class="text-right"><span>มาตรหลัง</span></th>
            <th class="text-right"><span>มาตรก่อน</span></th>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']/tbody//tr//td[1]" position="after">
            <td class="text-right"><span t-field="line.meter_to"/></td>
            <td class="text-right"><span t-field="line.meter_from"/></td>
        </xpath>
        <xpath expr="//table[@name='invoice_line_table']/tbody//tr//td[1]" position="attributes">
            <attribute name="width">30%</attribute>
        </xpath>
    </template>

    <template id="report_receipt_tax_invoice_abb_acm">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="ncopies" t-value="2"/>
                <t t-foreach="range(ncopies)" t-as="page">
                    <t t-set="lang" t-value="o.env.user.lang"/>
                    <t t-call="acm.report_receipt_tax_invoice_abb_acm_document_with_payments" t-lang="lang"/>
                </t>
            </t>
        </t>
    </template>

</odoo>
