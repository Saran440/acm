<odoo>
    <template id="report_payment_receipt_document" inherit_id="account.report_payment_receipt_document">
        <xpath expr="//div[@class='page']/div[3]" position="attributes">
            <attribute name="class">row</attribute>
        </xpath>
        <xpath expr="//div[@class='page']/div[3]" position="after">
            <div class="row mb64">
                <div class="col-6" t-if="o.description">
                    <strong>Reference/Description: </strong><span t-field="o.description"/>
                 </div>
                <div class="col-6"></div>
            </div>
        </xpath>
    </template>
</odoo>
